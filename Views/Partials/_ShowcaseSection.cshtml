@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models
    <div class='container-fluid showcase'>
      
            <div class='container showcase-header d-flex justify-content-start'>
                <div class='showcase-desc'>
                    <h3>@Model.Value("showcaseTitle")</h3>
                    <div>@Model.Value("showcaseDescription")</div>
                  <div class='d-flex'>
                        <a class='btn-theme me-2' href="@Model.Value("showcaseButtonURL")"> @Model.Value("showcaseButtonText")&nbsp;&nbsp;<i class="fa-solid fa-arrow-up-right"></i></a>
                        <a class='btn-theme-dark' href="/service" >Learn More&nbsp;&nbsp;<i class="fa-solid fa-arrow-up-right"></i></a>
                      
                    </div>
                </div>
        <div class='showcase-img'>


            @{
                var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
                if (showcaseImage != null)
                {
                    <img src="@showcaseImage.MediaUrl()"  alt="@Model.Value("showcaseTitle")" />
                }
            }


        </div>
        <div class='bgline-showcase'><img src="~/images/background-effects/background-lines.svg" alt="" /></div>
            </div>
          
        </div>